<Dropdown
  class="wds-global-navigation__link-group"
  @hasShadow={{true}} as |dropdown|
>
  <dropdown.toggle
    class="wds-global-navigation__dropdown-toggle wds-global-navigation__link" as |Chevron|
  >
    <span>
      {{i18n @model.title.key ns="design-system"}}
    </span>
    <Chevron />
  </dropdown.toggle>
  <dropdown.content class="wds-global-navigation__dropdown-content">
    <List @linked={{true}}>
      {{#each @model.items as |item|}}
        <li>
          {{!
              Componenets that can be rendere here are:
              - link-text
              - link-button
          }}
          {{component
            (concat "global-navigation/" item.type)
            model=item
            inDropdown=true
          }}
        </li>
      {{/each}}
    </List>
  </dropdown.content>
</Dropdown>
